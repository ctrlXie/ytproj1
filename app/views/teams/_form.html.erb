<div class="field">
  <div class="control">
    <label class="label">Team Name</label>
    <input type="text" class="input" placeholder="enter team name..">
  </div>
</div>

<div class="content">
  <h2 class="title is-4">Invite users</h2>
    <p>invite friends to join your team.  we'll send them an email to create an account</p>
</div>

<!--iterates through all users that comes back through JSON in new.html.erb-->
<div v-for="(user, index) in team.user_attributes">
  <div v-if="user.destroy == '1'">
    {{user.name}} will be deleted.
    <!--undoRemove(index) function comes from vue file "willo.js"-->
    <button v-on:click="undoRemove(index)" class="button is-small">Undo</button>
  </div>
  <div v-else>

    <div class="field">
      <div class="control">
        <label class="label">Name</label>
        <input type="text" class="input" placeholder="enter name.." v-model="user.name"/>
      </div>
    </div>


    <div class="field">
      <div class="control">
        <label class="label">Email</label>
        <input type="text" class="input" placeholder="enter email.." v-model="user.email"/>
        <div id="errors" class="has-text-danger" v-if="errors.length">{{errors}}</div>
      </div>
    </div>
    <input type="hidden" value="<%= current_user.id %>" />
    <div class="field">
      <div class="control">
        <!--removeUser(index) function comes from vue file "willo.js"-->
        <button v-on:click="removeUser(index)" class="button is-small">Delete</button>
      </div>
    </div>
  </div>
<hr />
</div>


<div class="field">
  <div class="control">
   <button v-on:click="addUser" class="button is-link">Add user</button>
  </div>
</div>

<hr />

<div class="field">
  <div class="control">
    <!--if current page is the new team path, button will say "create team", else, "save team"-->
    <% if current_page?(new_team_path) %>
      <button v-on:click="saveTeam" class="button is-success is-large">Create Team</button>
    <% else %>
      <button v-on:click="saveTeam" class="button is-success is-large">Save Team</button>
    <% end %>
  </div>
</div>
